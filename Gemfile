source 'https://rubygems.org'

gem 'progressbar'       # required for eye candy during conversion
gem 'sqlite3'           # required to access iPhoto database
gem 'exifr'             # required to read orientation metadata from image files
gem 'CFPropertyList'    # required to read binary plist blobs in SQLite3 dbs, 'plist' gem can't do this
gem 'pp'                # to pretty print PList extractions
